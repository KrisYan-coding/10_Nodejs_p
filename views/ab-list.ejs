<%- include('parts/html-head') %>
  <!-- --要用ejsesc (不要跳脫 html) -->
  <!-- --路徑開頭不要'/', .ejs 可以省略-->
  <%- include('parts/navbar') %>


    <div class="container">
      <div class="row justify-content-between">
        <div class="col">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item"><a class="page-link" href="#">Previous</a></li>
              <% for(let i=page -5; i <=page + 5; i++){ if (i>0 && i<=totalPages){ %>
                  <li class="page-item <%= (i===page)? 'active' : ''%>">
                    <a class="page-link" href="javascript: gotoPage(<%= i %>)">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
                    <% } %>
                      <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
        <div class="col-4">
          <form class="d-flex" role="search" name="formSearch">
            <input class="form-control me-2" type="search" placeholder="Search" name="search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">
                  <a href="">
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </th>
                <th scope="col">#</th>
                <th scope="col">姓名</th>
                <th scope="col">信箱</th>
                <th scope="col">手機</th>
                <th scope="col">生日</th>
                <th scope="col">地址</th>
                <th scope="col">
                  <a href="">
                    <i class="fa-solid fa-pen"></i>
                  </a>
                </th>
              </tr>
            </thead>
            <tbody>
              <% for(let r of rows){ %>
                <tr>
                  <td>
                    <a href="javascript: deleteItem(<%= r.sid %>)">
                      <i class="fa-solid fa-trash"></i>
                    </a>
                  </td>
                  <td>
                    <%= r.sid %>
                  </td>
                  <td>
                    <%= r.name %>
                  </td>
                  <td>
                    <%= r.email %>
                  </td>
                  <td>
                    <%= r.mobile %>
                  </td>
                  <td>
                    <%= r.birthday && locals.toDateString(r.birthday) %>
                    <!-- moment('').format('YYYY-MM-DD') -> 空字串 變成 'invalid date' -->
                    <!-- (r.birthday !== '')? locals.toDateString(r.birthday) : NULL -->
                  </td>
                  <%# locals.toDateString=toDateString 樣板輔助函式 %>
                    <td>
                      <%= r.address %>
                    </td>
                    <td>
                      <a href="<%= baseUrl %>/edit/<%= r.sid %> ">
                        <i class="fa-solid fa-pen"></i>
                      </a>
                    </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

<%- include('parts/scripts') %>
<script>
  // --跳到搜尋結果頁時，保留搜尋的字串
  const usp = new URLSearchParams(location.search);
  const search = usp.get('search');
  document.formSearch.search.value = search;

  // pagination 用function ，處理 search query string 不見的問題--
  function gotoPage(page){
    usp.set('page', page);
    location.href = '?' + usp.toString();
  }
  
  // 用 delete 方法發送 req 來刪除資料--
  function deleteItem(sid){
    if (! confirm(`是否要刪除編號為 ${sid} 的資料?`)){
      return;
    }
    
    fetch(`<%= baseUrl %>/${sid}`, {
      method: 'DELETE'
    })
    .then(r=>r.json())
    .then(data => {
      console.log(data);
      if(data.success){
        location.reload(); // 重整頁面
      }
    })
  }
</script>

<%- include('parts/html-foot') %>